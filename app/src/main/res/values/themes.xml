<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Action bar -->
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
        <item name="titleTextColor">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_bg</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Action bar -->

    <style name="Custom.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/white_bg</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/MyTheme.MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Other -->

    <style name="films_recycler_view">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">80dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="section_btn_active">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_rounded</item>
    </style>

    <style name="section_btn_inactive">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_rounded_light</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="search_btn">
        <item name="android:layout_width">@dimen/image_btn_size</item>
        <item name="android:layout_height">@dimen/image_btn_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_search</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="back_btn">
        <item name="android:layout_width">@dimen/image_btn_size</item>
        <item name="android:layout_height">@dimen/image_btn_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="film_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">@dimen/about_margin</item>
        <item name="android:layout_marginVertical">15dp</item>
    </style>

</resources>